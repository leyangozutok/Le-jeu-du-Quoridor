int NombreJoueurs (){
    int a;
    printf("Choisissez le nombre de joueurs : \n 1. 2 joueurs \n 2. 4 joueurs" );
    scanf ("%d", &a);

    if (a==1){
        printf ("Partie à 2 joueurs");
        return 2;
    } else if (a==2){
        printf ("Partie à 4 joueurs");
        return 4;
    } else {
        printf ("Choix invalide. Veuillez choisir une option correcte");
        scanf ("%d", &a);
    }
    return 0;
}

int main (){
    char Nom1, Nom2, Nom3, Nom4;
    int nbJoueurs= NombreJoueurs();
